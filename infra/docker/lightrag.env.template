# LightRAG Production Configuration Template
# 원격 PostgreSQL + Neo4j 연결 설정
#
# 사용법:
# 1. 이 파일을 LightRAG 프로젝트 루트의 .env로 복사
# 2. DB_SERVER_IP를 실제 서버 IP로 변경
# 3. 비밀번호를 실제 값으로 변경

###########################
### Server Configuration
###########################
HOST=0.0.0.0
PORT=9621
WORKERS=4

###########################
### Authentication
###########################
AUTH_ACCOUNTS='admin:your_admin_password'
TOKEN_SECRET='your-jwt-secret-minimum-32-characters-long'
TOKEN_EXPIRE_HOURS=48
LIGHTRAG_API_KEY=your-api-key-for-external-systems

###########################
### LLM Configuration
###########################
LLM_BINDING=openai
LLM_MODEL=lbu-slm-v3-qw
LLM_BINDING_HOST=http://10.62.130.84:18001/v1
LLM_BINDING_API_KEY=EMPTY
LLM_TIMEOUT=300
OPENAI_LLM_MAX_TOKENS=9000
OPENAI_LLM_TEMPERATURE=0.7

###########################
### Embedding Configuration
###########################
EMBEDDING_BINDING=openai
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DIM=1024
EMBEDDING_BINDING_HOST=http://10.62.130.84:19006
EMBEDDING_BINDING_API_KEY=EMPTY
EMBEDDING_SEND_DIM=false
EMBEDDING_TOKEN_LIMIT=8192

###########################
### Storage Configuration
###########################
# PostgreSQL for KV, Vector, DocStatus
LIGHTRAG_KV_STORAGE=PGKVStorage
LIGHTRAG_DOC_STATUS_STORAGE=PGDocStatusStorage
LIGHTRAG_VECTOR_STORAGE=PGVectorStorage

# Neo4j for Graph (PostgreSQL AGE보다 성능 우수)
LIGHTRAG_GRAPH_STORAGE=Neo4JStorage

###########################
### PostgreSQL Connection
### DB_SERVER_IP를 실제 서버 IP로 변경하세요
###########################
POSTGRES_HOST=DB_SERVER_IP
POSTGRES_PORT=5432
POSTGRES_USER=lightrag
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DATABASE=lightrag
POSTGRES_MAX_CONNECTIONS=20

# Vector Index Type: HNSW (권장), IVFFLAT, VCHORDRQ
POSTGRES_VECTOR_INDEX_TYPE=HNSW
POSTGRES_HNSW_M=16
POSTGRES_HNSW_EF=200

###########################
### Neo4j Connection
### DB_SERVER_IP를 실제 서버 IP로 변경하세요
###########################
NEO4J_URI=neo4j://DB_SERVER_IP:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password
NEO4J_DATABASE=neo4j
NEO4J_MAX_CONNECTION_POOL_SIZE=50

###########################
### Query Configuration
###########################
ENABLE_LLM_CACHE=true
MAX_ASYNC=4
MAX_PARALLEL_INSERT=2

###########################
### Document Configuration
###########################
ENABLE_LLM_CACHE_FOR_EXTRACT=true
SUMMARY_LANGUAGE=Korean
CHUNK_SIZE=1200
CHUNK_OVERLAP_SIZE=100

###########################
### Logging
###########################
LOG_LEVEL=INFO
VERBOSE=False
